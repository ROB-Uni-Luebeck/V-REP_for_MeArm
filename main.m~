%% DONT TOUCH HERE
% Clear everything and close everything
clear all; close all; clc;

global vrep; 
global vrepDATA;
global numberOfJoints; 
portNumber = 19999; % FOR KUKA: 19999
%% FEEL FREE TO TOUCH
% parameter abhaengig vom Roboter
numberOfJoints = 7;
jointName = 'LBR_iiwa_7_R800_joint%i'; % FOR KUKA: 'LBR_iiwa_7_R800_joint%i'
%verbindet zum ROboterarm
VREPconnect(portNumber, jointName);

% hier kann man die gelenkparameter einstellen
q = ones(numberOfJoints,1)*20;
%fahr Parameter an
VREPtransfer(q);
        
% trennt die Verbindung
VREPdisconnect;